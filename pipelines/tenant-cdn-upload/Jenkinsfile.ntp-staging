#!groovy

node('android-slave') {

    currentBuild.result = "SUCCESS"

    try {

       stage('Checkout'){

          checkout scm
          sh"""
            chmod 775 ./pipelines/tenant-cdn-upload/setupPlayer.sh
            chmod 775 ./pipelines/tenant-cdn-upload/build.sh
            chmod 775 ./pipelines/tenant-cdn-upload/deploy.sh
            ./pipelines/setupDevopsCode.sh
            ./pipelines/tenant-cdn-upload/setupPlayer.sh ${branch} ${pwd}
            """
       }

       stage('Build'){
          sh ("docker run --rm -v `pwd`:/work -w /work node:8.11.2-alpine sh ./pipelines/tenant-cdn-upload/build.sh ${cdn}")
        }
        
        stage('Deploy'){
            sh("./pipelines/tenant-cdn-upload/deploy.sh ntp-staging")
        }
    }
    catch (err) {
        currentBuild.result = "FAILURE"
        throw err
    }

}