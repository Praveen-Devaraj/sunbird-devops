#!groovy

node('general-production') {

    currentBuild.result = "SUCCESS"

    try {

       stage('Checkout'){

          checkout scm
          sh('./pipelines/setupDevopsCode.sh')
       }

       stage('Pre-Build'){

         sh('./pipelines/sunbird-content-service/installDeps.sh')

       }
        stage('Metadata'){

         sh('./pipelines/metadata.sh  .content > ./pipelines/sunbird-content-service/metadata.json')

       }
      stage('Deploy to Dev'){
        sh 'METADATA_FILE=./pipelines/sunbird-content-service/metadata.json ENV=ntp-production ARTIFACT_LABEL=silver ./pipelines/sunbird-content-service/deploy.sh'
        archive includes: "metadata.json"
       }
    }
    catch (err) {
        currentBuild.result = "FAILURE"
        throw err
    }

}
