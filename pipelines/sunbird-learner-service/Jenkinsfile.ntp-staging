#!groovy

node('general-staging') {

    currentBuild.result = "SUCCESS"

    try {

       stage('Checkout'){

          checkout scm
          sh('./pipelines/setupDevopsCode.sh')
       }

       stage('Pre-Build'){

         sh('./pipelines/sunbird-learner-service/installDeps.sh')

       }
        stage('Metadata'){

         sh('./pipelines/metadata.sh  .learner > ./pipelines/sunbird-learner-service/metadata.json')

       }
     stage('Deploy to Dev'){
        sh 'METADATA_FILE=./pipelines/sunbird-learner-service/metadata.json ENV=ntp-staging ARTIFACT_LABEL=silver ./pipelines/sunbird-learner-service/deploy.sh'
        archive includes: "metadata.json"
       }
    }
    catch (err) {
        currentBuild.result = "FAILURE"
        throw err
    }

}
