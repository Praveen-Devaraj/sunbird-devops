#!groovy

node('general-performance') {

    currentBuild.result = "SUCCESS"

    try {

       stage('Checkout'){

          checkout scm
          sh('./pipelines/setupDevopsCode.sh')
       }

       stage('Pre-Build'){

         sh('./pipelines/sunbird-player/installDeps.sh')

       }
     stage('Deploy to Dev'){
        sh 'METADATA_FILE=./pipelines/sunbird-learner-service/metadata.json ENV=ntp-performance ARTIFACT_LABEL=gold ./pipelines/sunbird-learner-service/deploy.sh'
        archive includes: "metadata.json"
       }
    }
    catch (err) {
        currentBuild.result = "FAILURE"
        throw err
    }

}
