#!groovy

node('general-performance') {

    currentBuild.result = "SUCCESS"

    try {

       stage('Checkout'){

          checkout scm
          sh('./pipelines/setupDevopsCode.sh')
       }

       stage('Pre-Build'){

         sh('./pipelines/logger/installDeps.sh')

       }

       stage('Deploy'){

         sh 'ENV=ntp-performance ./pipelines/logger/deploy.sh'

       }
    }
    catch (err) {
        currentBuild.result = "FAILURE"
        throw err
    }

}
